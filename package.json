{
  "name": "kalivra",
  "version": "1.0.1",
  "description": "Kalivra Application",
  "main": "main.js",
  "author": "Bawky <ghini7170@gmail.com>",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac --linux"
  },
  "build": {
    "productName": "Kalivra",
    "appId": "com.Bawky.kalivra",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/AppIcon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Kalivra",
      "installerIcon": "assets/AppIcon.ico",
      "uninstallerIcon": "assets/AppIcon.ico",
      "uninstallDisplayName": "Kalivra (Bawky)",
      "runAfterFinish": true
    },
    "files": [
      "**/*",
      "assets/**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/AppIcon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/AppIcon.png",
      "category": "Development",
      "maintainer": "Bawky <ghini7170@gmail.com>"
    }
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "firebase": "^12.7.0"
  }
}
